{
  "name": "livescores",
  "version": "1.0.0",
  "description": "This is a set of PowerShell sciprs and typescript files to fetch the livescores of the selected football matches and send the messages to Telegram.",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "start": "pnpm build && node build/src/actions.js",
    "build": "pnpm clean && tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "pnpm clean && tsc -p tsconfig.release.json",
    "clean": "rimraf coverage build tmp",
    "lint": "eslint . --ext .ts --ext .mts",
    "prettier": "prettier --config .prettierrc --write ."
  },
  "dependencies": {
    "@distube/ytdl-core": "^4.15.1",
    "@types/argparse": "^2.0.17",
    "@types/nunjucks": "^3.2.6",
    "argparse": "^2.0.1",
    "dotenv": "^16.4.5",
    "jimp": "^1.6.0",
    "nayan-media-downloader": "^2.6.4",
    "nunjucks": "^3.2.4",
    "puppeteer": "^23.6.1",
    "rahad-all-downloader": "^2.1.16",
    "rimraf": "^6.0.1",
    "tslib": "~2.8",
    "youtube-dl-exec": "^3.0.10",
    "ytdl-core": "^4.11.5"
  },
  "devDependencies": {
    "@types/node": "^22.8.1",
    "@typescript-eslint/eslint-plugin": "~8.11",
    "@typescript-eslint/parser": "~8.11",
    "eslint": "~9.13",
    "eslint-config-prettier": "~9.1",
    "eslint-plugin-jest": "~28.8",
    "prettier": "~3.3",
    "typescript": "~5.6"
  },
  "engines": {
    "node": ">= 20.9 < 21"
  }
}
