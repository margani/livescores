{
  "name": "livescores",
  "version": "1.0.0",
  "description": "This is a set of PowerShell sciprs and typescript files to fetch the livescores of the selected football matches and send the messages to Telegram.",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "script": "pnpm build && node build/src/scripts/script.js",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "prettier": "prettier --config .prettierrc --write ."
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "nunjucks": "^3.2.4",
    "puppeteer": "^23.6.1",
    "tslib": "~2.8"
  },
  "devDependencies": {
    "@types/node": "^22.8.1",
    "@typescript-eslint/eslint-plugin": "~8.11",
    "@typescript-eslint/parser": "~8.11",
    "eslint": "~9.13",
    "eslint-config-prettier": "~9.1",
    "eslint-plugin-jest": "~28.8",
    "prettier": "~3.3",
    "typescript": "~5.6"
  },
  "engines": {
    "node": ">= 20.9 < 21"
  }
}
